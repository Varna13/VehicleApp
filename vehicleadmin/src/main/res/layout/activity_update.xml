<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity"
    android:background="@color/blue">

    <EditText
        android:id="@+id/etUpdateVehicleNumber"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:hint="Enter Vehicle Number"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColor="@color/lightBlue"
        android:background="@drawable/border_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <EditText
        android:id="@+id/etUpdateVehicleBrand"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:hint="Enter Vehicle Brand"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColor="@color/lightBlue"
        android:background="@drawable/border_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUpdateVehicleNumber"/>

    <EditText
        android:id="@+id/etUpdateVehicleRTO"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:hint="Enter Vehicle RTO"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColor="@color/lightBlue"
        android:background="@drawable/border_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUpdateVehicleBrand"/>


    <EditText
        android:id="@+id/etUpdateOwnerName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:hint="Enter Owner Name"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textColor="@color/lightBlue"
        android:background="@drawable/border_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etUpdateVehicleRTO"/>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:paddingStart="14dp"
        android:text="UPDATE"
        android:textColor="@color/blue"
        android:paddingEnd="14dp"
        android:backgroundTint="@color/lightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etUpdateOwnerName"/>

</androidx.constraintlayout.widget.ConstraintLayout>